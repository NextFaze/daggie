<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/userProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User profile" />

    <Button
        android:id="@+id/requestPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Permission" />

    <com.example.app.MyView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.nextfaze.daggie.glide.RemoteImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:daggie_glide_errorDrawable="@drawable/placeholder"
        app:daggie_glide_fadeDuration="2000"
        app:daggie_glide_fadeType="onTop"
        app:daggie_glide_placeholderDrawable="@drawable/placeholder"
        tools:ignore="ContentDescription" />

</LinearLayout>
